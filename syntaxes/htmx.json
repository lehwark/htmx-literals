{
  "fileTypes": [
    "js",
    "jsx",
    "ts",
    "tsx"
  ],
  "injectionSelector": "L:source.js -comment -string, L:source.jsx -comment -string,  L:source.js.jsx -comment -string, L:source.ts -comment -string, L:source.tsx -comment -string",
  "patterns": [
    {
      "begin": "((htm\\w*|template))(`)",
      "beginCaptures": {
        "1": {
          "name": "comment.block"
        }
      },
      "end": "(`)",
      "patterns": [
        {
          "include": "source.ts#template-substitution-element"
        },
        {
          "include": "text.html.basic"
        },
        {
          "include": "htmxx#template"
        }
      ]
    },
    {
      "begin": "(\\${)",
      "end": "(})",
      "beginCaptures": {
        "1": {
          "name": "entity.name.tag"
        }
      },
      "endCaptures": {
        "1": {
          "name": "entity.name.tag"
        }
      },
      "patterns": [
        {
          "include": "source.ts#template-substitution-element"
        },
        {
          "include": "source.js"
        }
      ]
    }
  ],
  "scopeName": "htmx"
}