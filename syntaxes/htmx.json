{
  "fileTypes": [
    "js",
    "jsx",
    "ts",
    "tsx"
  ],
  "injectionSelector": "L:source.js, L:source.js, L:source.jsx,  L:source.js.jsx, L:source.ts, L:source.tsx",
  "patterns": [
    {
      "begin": "((htm\\w*|template))(`)",
      "beginCaptures": {
        "1": {
          "name": "comment.block"
        }
      },
      "end": "(`)",
      "patterns": [
        {
          "include": "source.ts#template-substitution-element"
        },
        {
          "include": "text.html.basic"
        },
        {
          "include": "htmxx#template"
        }
      ]
    },
    {
      "begin": "(\\${)",
      "end": "(})",
      "beginCaptures": {
        "1": {
          "name": "entity.name.tag"
        }
      },
      "endCaptures": {
        "1": {
          "name": "entity.name.tag"
        }
      },
      "patterns": [
        {
          "include": "source.ts#template-substitution-element"
        },
        {
          "include": "source.js"
        }
      ]
    }
  ],
  "scopeName": "htmx"
}